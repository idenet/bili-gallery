@import '~@/common/stylus/variable.styl';
@import '~@/common/stylus/mixin.styl'

.list-wrapper
  .list-item
    display: flex
    flex-flow: row wrap
    align-content: space-around
    justify-content: space-around
    box-sizing: border-box
    .item
      padding: 0 5px 10px 5px
      .pictures-container
        position relative
        width: 160px;
        height: 0
        padding-bottom: 75%;
        overflow: hidden;
        border-top-left-radius: 5px
        border-top-right-radius: 5px
        img
          width: 100%;
        .img-desc
          display: block
          position: absolute
          bottom: 5px
          right: 5px
          font-size: 12px
          color: #fff;
          border-radius: 4px;
          background-color: rgba(5,5,5,0.41);
          padding: 2px 4px;
      .desc-container
        display: flex
        flex-direction: column
        width: 160px
        .title
          width: 100%;
          no-wrap()
          margin-top: 10px
          font-size: $font-size-small
          color: $color-text-d
        .user
          position relative
          margin-top: 5px
          .icon
            display: inline-block
            border-radius: 100%
            vertical-align: middle;
            margin-right: 5px;
          .name
            vertical-align: middle
            display: inline-block
            font-size: $font-size-medium
          .favorite
            display: inline-block
            vertical-align: middle
            position: absolute
            right: 0
            bottom: 4px
            color: $color-theme
    .more-desc
      color: $color-text-l 
      font-size: $font-size-medium