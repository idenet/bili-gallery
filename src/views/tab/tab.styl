@import '../../common/stylus/variable.styl'

.tab
  display: flex
  height 44px
  line-height: 44px
  font-size: $font-size-medium
  .tab-item
    text-align: center
    flex: 1
    .tab-link
      padding-bottom: 5px
      color: $color-text-l
    &.router-link-active
      .tab-link
        color: $color-theme
        border-bottom: 2px solid $color-theme